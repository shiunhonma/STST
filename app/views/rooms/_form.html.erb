<%= form_with(model: room) do |form| %>
  <% if room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
        <% room.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "部屋名" %>
    <%= form.text_field :room_name %>
  </div>

  <div class="field">
    <%= form.label "カテゴリ" %>
    <%= form.select :room_category_id, RoomCategory.all.map { |room_category| [room_category.category_name, room_category.id]} %>
  </div>

  <div class="field">
    <%= form.label "部屋紹介" %>
    <%= form.text_field :comment %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-input" %>
  </div>
<% end %>
