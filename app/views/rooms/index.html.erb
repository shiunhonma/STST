<p id="notice"><%= notice %></p>

<h1>部屋</h1>

<table>
  <thead>
    <tr>
      <th>部屋名</th>
      <th>カテゴリID</th>
      <th>ユーザID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.room_name %></td>
        <td><%= room.room_category %></td>
        <td><%= room.user_id %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

