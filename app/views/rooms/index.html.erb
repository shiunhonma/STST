<h1>部屋</h1>

<table>
  <thead>
    <tr>
      <th>部屋名</th>
      <th>カテゴリID</th>
      <th>ユーザID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.room_name %></td>
        <td><%= room.room_category %></td>
        <td><%= room.user_id %></td>
        <td><%= link_to '公開', room %></td>
        <td><%= link_to '編集', edit_room_path(room) %></td>
        <td><%= link_to '削除', room, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しく部屋を作る', new_room_path %-->

<div>
  <% @anotherUserRooms.each do |userroom| %>
    <table class="table table-striped">
      <tr>
        <td>
          <%= link_to room_path(userroom.roomid) do %>
            <%= userroom.user.name %>
          <% end %>
        </td>
        <td>
          <% chat = Chat.find_by(id: userroom.room.chat_ids.last) %>
          <% if chat.nil? %>
            <span>投稿なし</span>
          <% else %>
            <%= truncate(chat.message, lingth: 10) %>
          <% end %>
        </td>
        <td>
          <h6 style="color: #C0C0C0;"><%= userroom.updated_at.strftime("%Y/%m/%d %H:%M") %>
        </td>
        <td>
          <%= link_to room_path(userroom.room.id), methodd: :delete do %>
            削除
          <% end %>
        </td>
      </tr>
    </table>
  <% end %>
</div>