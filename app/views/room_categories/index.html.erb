<p id="notice"><%= notice %></p>
<% a = 0%>
<h1>資格・各教科の部屋</h1>

<div class="row">
<div class="col">

<div class="btn_wrap">
  <% @room_categories.each do |room_category| %>
    <% a += 1 %>
    <% if a == 1 %>
      <% b = 'shikaku' %>
    <% elsif a == 2%>
      <% b = 'sugaku' %>
    <% elsif a == 3 %>
      <% b = 'puro' %>
    <% elsif a == 4 %>
      <% b = 'boki' %>
    <% elsif a == 5 %>
      <% b = 'rika' %>
    <% elsif a == 6 %>
      <% b = 'kokugo' %>
    <% elsif a == 7 %>
      <% b = 'tirirekisi' %>
    <% elsif a == 8%>
      <% b = 'kouminn' %>
    <% elsif a == 9 %>
      <% b = 'hokenn' %>
    <% elsif a == 10 %>
      <% b = 'eigo' %>
    <% elsif a == 11 %>
      <% b = 'biki' %>
    <% elsif a == 12 %>
      <% b = 'sougouzissenn' %>
    <% elsif a == 13 %>
      <% b = 'zyouhousyori' %>
    <% end %>
    <div class="d-inline align-middle"><%= link_to room_category.category_name, room_category, class: 'btn btn-light btnx-indigo-light', id: b %></div>
  <% end %>
</div>

</div>
</div>

<br>

