<p id="notice"><%= notice %></p>

<h1>チャット</h1>

<table>
  <thead>
    <tr>
      <th>メッセージ</th>
      <th>添付ファイル</th>
      <th>ユーザーID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chats.each do |chat| %>
      <tr>
        <td><%= chat.message %></td>
        <td><%= chat.attachment %></td>
        <td><%= chat.user_id %></td>
        <td><%= link_to '公開', chat %></td>
        <td><%= link_to '編集', edit_chat_path(chat) %></td>
        <td><%= link_to '削除', chat, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

