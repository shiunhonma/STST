


<div class = Mypage><!-- とりあえず-->
    <h1 class ="Mypage_text">マイページ</h1>
    <%= link_to image_tag('/images/ギア.png' , class:"gear" ,:width => '60', :height => '60' ), home_mypage_setting_path  %>
</div>
        <div class="row ">
            
            <div class="col-md-6 border">
                <div class="row">
                    <div class="col-md-12 border text-center">
                        <div class="icon_box">
                            <%= image_tag(url_for(image_of_usericon_path(current_user.id)), class: "rounded-circle",:width => '350', :height => '350' )%>
                            <h1 class="name"><%= current_user.name %>(<%= current_user.id %>)</h1>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 border text-center">
                        <%= link_to 'チャット', rooms_path , {class: "btn btn--chat"}%>
                    </div>
                </div>
            </div>
            
            
            <div class="col-md-6 border">
                <div class="row">
                    <div class="col-md-12 border text-center">
                        <div class="point_box">
                        
                            <p class ="point"><%= current_user.point %></p>
                            <div class="have_point">
                                <h2>所有ポイント</h2>
                            </div>
                            <h3><%= current_user.taught_member %>人に教えました！！</h3>
                            <h3><%= current_user.student_member %>人に教わりました！！</h3>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 border text-center">
                        <%= link_to 'ランキング', chats_path , {class: "btn btn--ranking"}%>
                    </div>
                </div>
            </div>
            
        </div>
        <div class="root_home">
            <%= link_to image_tag('/images/home.jpg' , class:"home" ,:width => '100', :height => '100' ), home_index_path  %>
        </div>
