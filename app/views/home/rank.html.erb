  <div id="<%=rank_id%>">
    <%= rank_num %>
    <%= user.name %>: 
    <%= user.point %> p
    <% rank_num += 1 %>
    <h1></h1>
  </div>
  <br>
  <% rank_id = "" %>
<%end %>
