<% rank_num = 1 %>
<% rank_id = "" %>
<% users = User.all.order(point: "DESC") %>
<% users.each do |user|%>
  <%
    if rank_num == 1
      rank_id = "no1"
    elsif rank_num == 2
      rank_id = "no2"
    elsif rank_num == 3
      rank_id = "no3"
    end
    puts "#{rank_id}*********************************************************"
