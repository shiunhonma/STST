      <h2><%= pluralize(room_entry.errors.count, "error") %> prohibited this room_entry from being saved:</h2>
      <ul>
        <% room_entry.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "名前"%>
      <h2><%= @user.name %></h2>
  </div>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_field :comment %>
  </div>

  <%= form.hidden_field :room_id, value: room_entry.room_id %>
  <%= form.hidden_field :user_id, value: room_entry.user_id %>

  <% if current_user.id == room_entry.room.user_id %>
    <div class="actions">
      <%= form.submit "承認" ,class:"btn btn-input"%>
    </div>
  <% else %>
    <div class="actions">
      <%= form.submit "申請" ,class: "btn btn-input" %>
    </div>
  <% end %>

<% end %>
