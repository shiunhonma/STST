<p id="notice"><%= notice %></p>

<h1>Room Entries</h1>

<table>
  <thead>
    <tr>
      <th>Comment</th>
      <th>Flag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_entries.each do |room_entry| %>
      <tr>
        <td><%= room_entry.comment %></td>
        <td><%= room_entry.flag %></td>
        <td><%= link_to 'Show', room_entry %></td>
        <td><%= link_to 'Edit', edit_room_entry_path(room_entry) %></td>
        <td><%= link_to 'Destroy', room_entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

