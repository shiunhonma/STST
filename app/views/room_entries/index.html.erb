<p id="notice"><%= notice %></p>

<h1>申請者一覧</h1>
<table>
  <thead>
    <tr>
      <th>部屋名</th>
      <th>申請者</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_entries.each do |room_entry| %>
      <% if current_user.id == room_entry.room.user_id %>
        <% room = Room.find(room_entry.room_id) %>
        <tr>
          <td><%= room.room_name %></td>
          <td><%= room_entry.user.name %></td>
          <td><%= room_entry.comment %></td>
          <td><%= room_entry.flag %></td>
          <td><%= link_to '詳しく見る', edit_room_entry_path(room_entry) ,{class: "btn btn_look "}%></td>
          <td><%= link_to '拒否', room_entry, method: :delete, data: {confirm: '本当に拒否しますか?'},class: "btn btn_look2"%></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>

</table>

